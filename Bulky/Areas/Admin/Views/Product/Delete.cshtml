@using Bulky.Models
@model Product

<form method="post" asp-action="Delete">
	<input asp-for="Id" hidden />
	<div class="border p-3 mt-4" style="margin-bottom: 100px;">
		<div class="row pb-2">
			<h2 class="text-primary">Delete Product</h2>
			<hr />
		</div>
		@*<div asp-validation-summary="All"></div>*@
		<div class="mb-3">
			<label asp-for="Id"></label>
			<input asp-for="Id" disabled class="form-control" />
		</div>
		<div class="mb-3">
			<label asp-for="Title"></label>
			<input asp-for="Title" disabled class="form-control" />
		</div>
		<div class="mb-3">
			<label asp-for="Description"></label>
			<input asp-for="Description" disabled class="form-control" />
		</div>
		<div class="mb-3">
			<label asp-for="ISBN"></label>
			<input asp-for="ISBN" disabled class="form-control" />
		</div>
		<div class="mb-3">
			<label asp-for="Author"></label>
			<input asp-for="Author" disabled class="form-control" />
		</div>
		<div class="mb-3">
			<label asp-for="ListPrice"></label>
			<input asp-for="ListPrice" disabled class="form-control" />
		</div>
		<div class="mb-3">
			<label asp-for="Price"></label>
			<input asp-for="Price" disabled class="form-control" />
		</div>
		<div class="mb-3">
			<label asp-for="Price50"></label>
			<input asp-for="Price50" disabled class="form-control" />
		</div>
		<div class="mb-3">
			<label asp-for="Price50"></label>
			<input asp-for="Price50" disabled class="form-control" />
		</div>
		<button type="submit" class="btn btn-danger" style="width:150px">Delete</button>
		<a asp-controller="Product" asp-action="Index" class="btn btn-secondary" style="width:150px">
			Back to List
		</a>
	</div>
</form>

@section Scripts {
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}
